# Creates docker-entrypoint-initdb.d (all scripts in dir are run automatically after startup)
FROM postgres:9.4 
RUN mkdir sql
RUN mkdir sql/docker-entrypoint-initdb.d
COPY initdb.sh /sql/docker-entrypoint-initdb.d
COPY guns.csv /sql/docker-entrypoint-initdb.d
COPY land.csv /sql/docker-entrypoint-initdb.d
COPY air.csv /sql/docker-entrypoint-initdb.d
COPY sea.csv /sql/docker-entrypoint-initdb.d


